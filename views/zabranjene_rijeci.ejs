<!DOCTYPE html>
<html>
<head>
    <title><%= title %></title>
    <script
            src="https://code.jquery.com/jquery-3.5.1.min.js"
            integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0="
            crossorigin="anonymous"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z" crossorigin="anonymous">
    <link rel='stylesheet' href='/stylesheets/style.css' />
</head>
<body>
<h1><%= title %></h1>


<a href="/admin/naslovna">Povratak na početnu</a><br><br><br>

<div>

    <form action="/admin/zabranjene_rijeci/dodaj" method = "post" class="form-inline">
        <input type="text" name="rijec" class="form-control mb-2 mr-sm-2">
        <button class="btn btn-primary mb-2">Dodaj</button>


    </form>
</div>

<table id = "pp" class="table table-striped">
    <thead class="thead-dark">
    <tr>
        <th> Riječ </th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    <% rijec.forEach(dokument => { %>
        <tr>
            <td> <%= dokument.rijec %> </td>
            <td><a class="btn btn-sm btn-danger" href="/admin/zabranjene_rijeci/izbrisi?id=<%= dokument._id %>">Briši</a></td>
        </tr>
    <% }); %>
    </tbody>
</table>
</body>
</html>